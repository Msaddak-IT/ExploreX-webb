{% extends 'baseback.html.twig' %}

{% block title %}Remboursement index{% endblock %}

{% block main %}
    <h1>Remboursement index</h1>

    <div class="body-container">
        <div class="form-container">
            <form method="get" action="{{ path('app_remboursement_index') }}" style="margin-bottom: 20px;">
                <div class="form-row">
                    <div class="col">
                        <input type="text" name="search" class="form-control" placeholder="Search" id="myInput">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <table class="table" id="myTable">
        <thead>
            <tr>
                
                <th>Montant remboursement</th>
                <th>Date de remboursement</th>
                <th>Id_rec</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% if remboursements is not empty %}
                {% for remboursement in remboursements %}
                    {% if app.request.query.get('search') is empty or
                          app.request.query.get('search') in [remboursement.id] or
                          app.request.query.get('search') in [remboursement.montantRembour] %}
                        <tr>
                            
                            <td>{{ remboursement.montantRembour }}</td>
                            <td>{{ remboursement.dateRembour ? remboursement.dateRembour|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ remboursement.idRec }}</td>
                            <td>
                                <a href="{{ path('app_remboursement_show', {'id': remboursement.id}) }}">show</a>
                                <a href="{{ path('app_remboursement_edit', {'id': remboursement.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_remboursement_new') }}">Create new</a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();

                $("#myTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
     <style>

  
/* Style pour le conteneur de la table */
.table-container {
    max-width: 1000px; /* Définissez la largeur maximale que vous souhaitez */
    margin: 0 auto; /* Centre la table à l'intérieur du conteneur */
    margin-bottom: 120px;
}

/* Reste du style pour la table, les en-têtes, les lignes, les cellules, les liens, etc. */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.table th {
    background-color: #3498db;
    color: white;
    padding: 10px;
    text-align: left;
}

.table tr:nth-child(odd) {
    background-color: #f2f2f2;
}

.table td {
    padding: 10px;
}

.table td a {
    text-decoration: none;
    color: #3498db;
    font-weight: bold;
}

.table td a:hover {
    text-decoration: underline;
}
</style>
{% endblock %}
