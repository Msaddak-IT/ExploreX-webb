{% extends 'baseback.html.twig' %}

{% block title %}Liste des offres{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
    <style>
        .flash-success {
            background-color: green;
            color: white;
        }

        .flash-error {
            background-color: red;
            color: white;
        }
    </style>
{% endblock %}


{% block flash_messages %}
    {% for flashMessage in app.flashes('success') %}
    <div class="flash-message flash-success">{{ flashMessage }}</div>
{% endfor %}

{% for flashMessage in app.flashes('error') %}
    <div class="flash-message flash-error">{{ flashMessage }}</div>
{% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Supprime les messages flash après un certain délai
            setTimeout(function() {
                $('.flash-message').remove();
            }, 5000);
        });
    </script>
{% endblock %}

{% block main %}
    <h1>Liste des offres</h1>
  <div>
    <a href="{{ path('app_offres_index', {'sort': 'asc'}) }}" class="btn btn-primary">Tri Croissant</a>
    <a href="{{ path('app_offres_index', {'sort': 'desc'}) }}" class="btn btn-primary">Tri Décroissant</a>
    <a href="{{ path('app_offres_stats') }}" class="btn btn-primary">statistiques</a>
</div>
<div id="message-container"></div>

    <div id="message-container"></div>

    <table class="table">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Prix</th>
                <th>Service</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.destination }}</td>
                <td>{{ offre.debut ? offre.debut|date('Y-m-d') : '' }}</td>
                <td>{{ offre.fin ? offre.fin|date('Y-m-d') : '' }}</td>
                <td>{{ offre.prix }}</td>
                <td>{{ offre.service }}</td>
                <td>
                    <a href="{{ path('app_offres_index', {'idOffres': offre.idOffres}) }}">show</a>
                    <a href="{{ path('app_offres_edit', {'idOffres': offre.idOffres}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <a href="{{ path('app_offres_new') }}">Create new</a>
       <style>

  
/* Style pour le conteneur de la table */
.table-container {
    max-width: 1000px; /* Définissez la largeur maximale que vous souhaitez */
    margin: 0 auto; /* Centre la table à l'intérieur du conteneur */
    margin-bottom: 120px;
}

/* Reste du style pour la table, les en-têtes, les lignes, les cellules, les liens, etc. */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.table th {
    background-color: #3498db;
    color: white;
    padding: 10px;
    text-align: left;
}

.table tr:nth-child(odd) {
    background-color: #f2f2f2;
}

.table td {
    padding: 10px;
}

.table td a {
    text-decoration: none;
    color: #3498db;
    font-weight: bold;
}

.table td a:hover {
    text-decoration: underline;
}
</style>
{% endblock %}
