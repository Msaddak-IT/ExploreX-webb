{% extends 'backbase.html.twig' %}

{% block body1 %}
<title>Rating index</title>
<link href="{{ asset('css/form_style.css') }}" rel="stylesheet">

    <h1>Rating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td>{{ rating.id }}</td>
                <td>{{ rating.rating }}</td>
                <td>{{ rating.bonplan.nameBonPlan }}</td>
                <td><a href="{{ path('app_rating_show', {'id': rating.id}) }}" class="btnTable">show</a></td>
                <td><a href="{{ path('app_rating_edit', {'id': rating.id}) }}" class="btnTable">edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rating_new') }}">Create new</a>
{% endblock %}
