{% extends 'back.html.twig' %}


{% block body %}


<h1>Users List </h1>
    <table class="table" border="1">
        <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Cin</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Pseudo</th>
            <th>Mdp</th>
            <th>details</th>
            <th>Edit</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.cin }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.mdp }}</td>
                <td><a href="{{ path('app_user_show', {'id': user.id}) }}">show</a></td>
                <td> <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <a href="{{ path('app_user_new') }}" class="btn btn-link">New User</a>
    </div>
{% endblock %}
